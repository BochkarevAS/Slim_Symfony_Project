{% extends 'base.html.twig' %}
{% block body %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Genus</th>
                <th># of species</th>
                <th>Last updated</th>
            </tr>
        </thead>
        <tbody>
            {% for genuse in genuses %}
                <tr>
                    <td>
                        <a href="{{ path('main_index', {'genuseName': genuse.name}) }}">{{ genuse.name }}</a>
                    </td>
                    <td>{{ genuse.specCount }}</td>
                    <td>{{ genuse.updatedAt|date('Y-m-d') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}